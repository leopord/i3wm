####################
# Global Variables #
###################
# mod key
set $mod Mod4

#workspace names
#Shell
set $WS1 "1:1:"
#Code
set $WS2 "2:2:"
#Web
set $WS3 "3:3:"
#Folder
set $WS4 "4:4:"
#VM
set $WS5 "5:5:"
#Mail
set $WS6 "6:6:"
#IRC
set $WS7 "7:7:"
#Multimedia
set $WS8 "8:8:"
#Game
set $WS9 "9:9:"
#Other
set $WS10 "10:0:"

# mode system
set $mode_system Power Management (l)ock, l(o)gout, (s)hutdown, (r)eboot


#########################
# Autostart Application #
#########################
exec --no-startup-id feh --bg-scale ~/.wm/i3/wallpaper.jpg
exec --no-startup-id volumeicon
exec --no-startup-id nm-applet
exec --no-startup-id fcitx
#exec --no-startup-id urxvt

#########################
#      Window Style     #
#########################
# font
font pango:Noto SansMono 11

# colors
# class			border	bg	text	indicator child_border
client.focused		#000000 #99CC66	#FFFFFF	#000000	  #99CC66
client.focused_inactive	#333333	#5F676A	#FFFFFF	#484E50	  #000000
client.unfocused	#333333	#222222	#888888	#292D2E	  #000000
client.urgent		#2F343A	#999999	#FFFFFF	#000000	  #000000
client.placeholder	#000000	#0C0C0C	#FFFFFF	#000000	  #0C0C0C
client.background	#FFFFFF

# border
for_window [class="^.*"] border pixel 1

# focus
focus_follows_mouse no
workspace_auto_back_and_forth no

# floating window size
floating_minimum_size 600x450
floating_maximum_size 800x600

# workspace layout
workspace_layout default

########################
#         i3bar        #
########################
# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	strip_workspace_numbers yes
	tray_output primary
	tray_padding 5
	status_command conky -c ~/.wm/conky/conky.top.conf
	position top
	font pango:noto mono 13
	binding_mode_indicator no
	colors {
		background #555555
		statusline #FFFFFF
		focused_workspace #333333 #000000 #FFFFFF
		active_workspace #000000 #00000 #FFFFFF
		inactive_workspace #333333 #555555 #FFFFFF
	}
}

bar {
	position bottom
	tray_output none
	tray_padding 5
	workspace_buttons no
	status_command conky -c ~/.wm/conky/conky.bottom.conf
	font pango:noto mono 12
	colors {
		background #555555
	}
}

